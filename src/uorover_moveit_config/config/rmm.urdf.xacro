<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rmm">

    <xacro:arg name="use_mock_hardware" default="false" />
	
    <xacro:include filename="$(find uorover_arm)/urdf/rmm.urdf" />

    <!-- Import control_xacro -->
    <xacro:include filename="rmm_ros2_control.xacro" />


    <xacro:rmm_ros2_control
     	name="ArmSystem"
     	use_mock_hardware="$(arg use_mock_hardware)" />

</robot>
